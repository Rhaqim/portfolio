---
import MangaLayout from "@layouts/MangaLayout.astro";

import Page from "@components/Manga/Page.svelte";
import Spread from "@components/Manga/Spread.svelte";
---

<MangaLayout>
	<Spread />

	<section id="about-me" class="section">
		<Page>
			<h2>Chapter 1: About Me</h2>
			<p>Hello! I'm [Your Name], a traveler, gamer, and manga lover!</p>
		</Page>
	</section>

	<section id="art" class="section">
		<Page>
			<h2>Chapter 2: Art Gallery</h2>
			<p>Some pixel art, manga sketches, and anime fanart I've made...</p>
		</Page>
	</section>

	<section id="travel" class="section">
		<Page>
			<h2>Chapter 3: Travels</h2>
			<p>Photos and stories from my adventures!</p>
		</Page>
	</section>

	<section id="blog" class="section">
		<Page>
			<h2>Chapter 4: Thoughts</h2>
			<p>Little blog entries about life, anime, games, and more.</p>
		</Page>
	</section>

	<footer style="text-align: center; font-size: 0.8rem; margin: 4rem 0;">
		© 2025 All Rights Reserved — Manga Magazine Vol.1
	</footer>
</MangaLayout>
